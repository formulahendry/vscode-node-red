{
    "name": "vscode-node-red",
    "displayName": "Node-RED",
    "description": "Flow-based programming for IoT (Internet of Things)",
    "version": "0.1.0",
    "publisher": "formulahendry",
    "icon": "logo.png",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "IoT",
        "Node-RED",
        "Raspberry Pi",
        "Arduino",
        "Android"
    ],
    "bugs": {
        "url": "https://github.com/formulahendry/vscode-node-red/issues",
        "email": "formulahendry@gmail.com"
    },
    "homepage": "https://github.com/formulahendry/vscode-node-red/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/formulahendry/vscode-node-red.git"
    },
    "activationEvents": [
        "*",
        "onCommand:node-red.open",
        "onCommand:node-red.deploy"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "node-red.open",
                "title": "Open",
                "category": "Node-RED"
            },
            {
                "command": "node-red.openToSide",
                "title": "Open to the Side",
                "category": "Node-RED"
            },
            {
                "command": "node-red.deploy",
                "title": "Deploy Node-RED Function",
                "category": "Node-RED"
            }
        ],
        "keybindings": [
            {
                "command": "node-red.open",
                "key": "ctrl+alt+x"
            },
            {
                "command": "node-red.openToSide",
                "key": "ctrl+alt+y"
            },
            {
                "command": "node-red.deploy",
                "title": "Deploy Node-RED Function",
                "key": "ctrl+d"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "",
                    "command": "node-red.deploy",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Node-RED",
            "properties": {
                "vscode-node-red.settings.js": {
                    "type": "object",
                    "default": {},
                    "description": "Configuration of Node-RED, refer to https://nodered.org/docs/configuration"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/express": "^4.11.1",
        "@types/fs-extra": "^5.0.4",
        "@types/get-port": "^3.2.0",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "@types/node-red": "^0.17.1",
        "@types/request-promise": "^4.1.42",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.18"
    },
    "dependencies": {
        "applicationinsights": "^1.0.2",
        "express": "^4.16.3",
        "fs-extra": "^7.0.0",
        "get-port": "^3.2.0",
        "node-red": "^0.18.7",
        "node-red-embedded-start": "^1.0.1",
        "request-promise": "^4.2.2"
    }
}
